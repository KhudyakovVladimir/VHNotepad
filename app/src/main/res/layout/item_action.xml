<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_shelf">

    <Button
            android:layout_width="320dp"
            android:layout_height="70dp" android:id="@+id/buttonDelete"
            android:background="@drawable/list_scroll"
            android:fontFamily="@font/berkshire_swash"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:text="delete"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="92dp"
            app:layout_constraintHorizontal_bias="0.494"/>
    <Button
            android:layout_width="320dp"
            android:layout_height="70dp" android:id="@+id/buttonReturn"
            android:background="@drawable/list_scroll"
            android:text="return"
            android:fontFamily="@font/berkshire_swash"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/buttonDelete"
            android:layout_marginTop="168dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.494"/>
</androidx.constraintlayout.widget.ConstraintLayout>
